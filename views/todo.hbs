<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>To Do App</title>
  </head>

  <body>

    <h2>{{welcomeMsg}}</h2>

    <form action={{updateAction}} method="POST">
      <input style="width:300px;height:200px" name="text" placeholder="{{task}}">
      <button style="display:flex;"type="submit">Update Task</button>
    </form>

    <form action={{deleteAction}} method="POST">
      <button style="display:flex;" type="submit">Delete Task</button>
    </form>

    <form action={{toggleAction}} method="POST">
      <button style="display:flex;" type="submit">{{toggleMsg}}</button>
    </form>

    <form action="/" method="GET">
      <button style="display:flex;" type="submit">Go Back</button>
    </form>

    {{> footer}}

  </body>


</html>
